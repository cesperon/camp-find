<%- include("partials/header")%>

<div class = "container">
	
	<div class="register-form rounded" style="width: 30%; margin: 25px auto">
		<h3 class='register-heading'>
			Sign up
		</h3>
		<form class = "form-group" action="/register" method = "POST">
			
			<input class='register-item' type="text" name="username" placeholder="username">


			<input class='register-item' type="password" name="password" placeholder="password">
			<p>
				<button class= "register-btn btn btn-lg btn-success">
					Register
				</button>
			</p>
	
		</form>
	</div>
	
</div>

<%- include("partials/footer")%>