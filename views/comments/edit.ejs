<%- include("../partials/header")%>

<div class = "container">
	
	<h1 style="text-align:center">
		Edit Comment
	</h1>

	<div style="width: 30%; margin: 25px auto">
		<form action = "/campGrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method = "POST">

			<div class = "form-group">
				<textarea class = "form-control" type = "text" name = "comment[text]" value="<%=comment.text%>">
					<%=comment.text%>
				</textarea>
			</div>
			<div class = "form-group">
				<button class = "btn btn-md btn-primary btn-block">
					Add Comment
				</button>
			</div>

		</form>
		<a href = '/campGrounds' 'text-align:center'>Go Back</a>
	</div>

</div>

<%- include("../partials/footer")%>