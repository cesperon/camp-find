<%- include("../partials/header")%>

<div class = "container edit">
	
	<h4>
		Edit
	</h4>
	<h4>
		<%=campground.name%>
	</h4>

	<div style="width: 50%; margin: 25px auto">
		<form action = "/campGrounds/<%=campground._id%>?_method=PUT" method = "POST">

			<div class = "form-group">
				<input class = "form-control" type = "text" name ="CampGroundName" value =<%=campground.name%>>
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "number" name = "campPrice" value='<%=campground.price%>' min="0.01" step="0.01">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" name ="CampGroundImg" value =<%=campground.image%>>
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" name ="CampGroundDesc" value =<%=campground.description%>>
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
			</div>
			<div class = "form-group">
				<button class = "btn btn-md btn-primary btn-block">
					Submit
				</button>
			</div>

		</form>
		<a href = '/campGrounds' 'text-align:center'>Go Back</a>
	</div>

</div>

<%- include("../partials/footer")%>
