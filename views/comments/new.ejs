<%- include("../partials/header")%>

<div class = "container">
	
<h1 style="text-align:center">
	Add New Comment to <%=foundCamp.name%>
</h1>
	
<div style="width: 30%; margin: 25px auto">
	<form action = "/campGrounds/<%=foundCamp._id%>/comments" method = "POST">
		
		<div class = "form-group">
			<textarea class = "form-control" type = "text" name = "comment[text]" placeholder = "comment"></textarea>
		</div>
		<div class = "form-group">
			<button class = "btn btn-md btn-primary btn-block">
				Add Comment
			</button>
		</div>
	
	</form>
	<a href = '/campGrounds' 'text-align:center'>Go Back</a>
</div>

</div>

<%- include("../partials/footer")%>